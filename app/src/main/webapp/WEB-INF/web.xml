<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Skewer</display-name>
	<welcome-file-list>
		<welcome-file>/views/client/container.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>client</servlet-name>
		<jsp-file>/views/client/container.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>client</servlet-name>
		<url-pattern>/client</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>supplier</servlet-name>
		<jsp-file>/views/supplier/container.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>supplier</servlet-name>
		<url-pattern>/supplier</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>product</servlet-name>
		<jsp-file>/views/product/container.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>product</servlet-name>
		<url-pattern>/product</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>admin</servlet-name>
		<jsp-file>/views/admin/container.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>admin</servlet-name>
		<url-pattern>/admin</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>order</servlet-name>
		<jsp-file>/views/order/container.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>order</servlet-name>
		<url-pattern>/order</url-pattern>
	</servlet-mapping>

</web-app>
